// test program to try things out

#include  <msp430x54x.h>
#include "MSP-EXP430F5438 HAL\hal_MSP-EXP430F5438.h"        

void main(void)
{    
	int i=10000;
	char color=0x00;
  WDTCTL = WDTPW+WDTHOLD;                   // Stop watchdog timer
	for(;;){
		i--;
		if(0==i){
			halLcdPrint("The robots are coming!!",color);
			if(color) color=0x00;
			else color=0x01;
			i=10000;
		}
	}
}
